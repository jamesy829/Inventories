<h1>Listing Manufacturers</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
 
  <% @manufacturers.each do |manufacturer| %>
    <tr>
      <td><%= manufacturer.name %></td>
      <td><%= link_to 'Show', manufacturer_path(manufacturer) %></td>
      <td><%= link_to 'Edit', edit_manufacturer_path(manufacturer) %></td>
      <td><%= link_to 'Delete', manufacturer_path(manufacturer),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'Add Manufacturer', new_manufacturer_path %>